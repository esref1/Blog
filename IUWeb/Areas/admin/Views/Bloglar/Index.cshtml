
<a href="/admin/Bloglar/Insert" style="margin-top:25px;margin-bottom:25px;" class="btn btn-primary">Yeni Blog</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>#</td>
            <td>Blog</td>
            <td>Paylaşım Tarihi</td>
            <td>Durumu</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.PublishDate</td>
                <td>@(item.Status == true ? "Aktif":"Pasif")</td>
                <td>
                    <a href="/admin/Bloglar/Update/@item.Id" class="btn btn-primary">Düzenle</a>
                    <a href="/admin/Bloglar/Delete/@item.Id" class="btn btn-danger">Sil</a>
                    <a href="/admin/Yorumlar/@item.Id" class="btn btn-warning">Yorumlar</a>
                    <a href="/admin/Etkilesimler/@item.Id" class="btn btn-info">Etkileşim</a>
                </td>
            </tr>
        }
    </tbody>
</table>