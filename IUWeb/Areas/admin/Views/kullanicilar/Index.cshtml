
<a href="/admin/Kullanicilar/Insert" style="margin-top:25px;margin-bottom:25px;" class="btn btn-primary">Yeni Kullanıcı</a>

<table class="table table-bordered">
    <thead>
       <tr>
            <td>#</td>
            <td>Adı Soyadı</td>
            <td>Email</td>
            <td>Kısa Açıklama</td>
            <td>İşlemler</td>
       </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.NameSurname</td>
                <td>@item.Email</td>
                <td>@item.Summary</td>
                <td>
                    <a href="/admin/kullanicilar/Delete/@item.Id" class="btn btn-danger">Sil</a>
                    <a href="/admin/kullanicilar/Update/@item.Id" class="btn btn-primary">Güncelle</a>
                </td>
              
            </tr>
        }
    </tbody>
</table>