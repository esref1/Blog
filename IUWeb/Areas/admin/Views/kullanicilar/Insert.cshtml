
<a href="/admin/Kullanicilar" style="margin-top:25px;margin-bottom:25px;" class="btn btn-primary">Geri Git</a>

<form action="/admin/Kullanicilar/Insert" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()


    <input type="file" name="file" class="form-control" style="margin-bottom:10px" />
    <input type="text" name="NameSurname" class="form-control" style="margin-bottom:10px" placeholder="Adı Soyadı" />
    <input type="text" name="Email" class="form-control" style="margin-bottom:10px" placeholder="Email" />
    <input type="password" name="Password" class="form-control" style="margin-bottom:10px" placeholder="Şifre " />
    <input type="text" name="Summary" class="form-control" style="margin-bottom:10px" placeholder="Kısa Açıklama" />
    <textarea class="form-control" name="Explanation" placeholder="Biyografi" style="margin-bottom:10px;height:150px;"></textarea>

    <input type="text" name="Phone" class="form-control" style="margin-bottom:10px" placeholder="Telefon" />

    <button type="submit" class="btn btn-primary"> Ekle</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" style="margin-top:25px;">@ViewBag.Error</div>
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success" style="margin-top:25px;">@ViewBag.Message</div>
} 